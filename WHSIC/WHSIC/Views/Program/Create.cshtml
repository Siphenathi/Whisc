@model WHSIC.Model.ProgramViewModel
@{
    ViewBag.Title = "Create Program";
    Layout = "~/Views/Secretary/_DashBoard.cshtml";
}
<div class="well">
    <h2> Add New Program</h2>
    @using (Html.BeginForm("Create", "Program", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.PName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.PName, new { placeholder = Html.DisplayNameFor(n => n.PName), @class = "form-control" })

                    @Html.ValidationMessageFor(model => model.PName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })

                    @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Frequence, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.DropDownList("Frequence", new List<SelectListItem>
               {
                   new SelectListItem {Text="Sundays",Value="Sundays"},
                   new SelectListItem{Text="Mondays",Value="Modays"},
                   new SelectListItem {Text="Tuesdays",Value="Tuesdays"},
                   new SelectListItem {Text="Wednesdays",Value="Wednesdays"},
                   new SelectListItem {Text="Thursdays",Value="Thursdays"},
                   new SelectListItem {Text="Fridays",Value="Fridays"},
                   new SelectListItem {Text="Saturdays",Value="Saturdays"},
                   new SelectListItem {Text="Weekly",Value="Weekly"},
                   new SelectListItem {Text="Monthly",Value="Monthly"},
                   new SelectListItem {Text="Yearly",Value="Yearly"}
               }, "Select Frequence", new { @style = "width:242px;height:38px;" })

                @Html.ValidationMessageFor(model => model.Frequence, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.Venue, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.Venue, new { placeholder = Html.DisplayNameFor(n => n.Venue), @class = "form-control" })

                    @Html.ValidationMessageFor(model => model.Venue, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class=" col-md-10">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </div>

    }

    <div class="text-danger">
        @ViewBag.m
    </div>

    <div>
    @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-default" })
</div>

    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }





