@using PagedList.Mvc
@model PagedList.IPagedList<WHSIC.Model.DonationTypeViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Secretary/_DashBoard.cshtml";
}

<h2>List of Donation Types</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered table-hover table-striped">
    <tr>
       
        <th>
            Description
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.DonationtypeID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.DonationtypeID })
            </td>
        </tr>
    }
    <tr>
        <td>
            <div class="col-sm-10">
                <div class="center">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, pageSize = Model.PageSize }))
                </div>
            </div>
        </td>
    </tr>
</table>