@using iTextSharp.text
@model WHSIC.Model.RemoveFromRole
@{
    ViewBag.Title = "DeleteRolesAsync";
    Layout = "~/Views/Admin/_DashBoard.cshtml";
}
    @using (Html.BeginForm("DeleteRolesAsync", "Role", FormMethod.Post))
    {
        <style>
            body {
                background-color: #F1F1F1;
            }
        </style>
        @Html.AntiForgeryToken()
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>Remove User from Role</h2>
            </div>
            <div class="panel-body">
                <hr/>
                @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                <div class="form-group">
                    @Html.LabelFor(model => model.Employee, htmlAttributes: new {@class = "control-label col-md-2"})
                    <div class="col-md-3">
                        @Html.DropDownList("Employee", (SelectList) ViewBag.Employee, "---Select Employee--", new {@style = "width:252px;height:38px;"})
                        @Html.ValidationMessageFor(model => model.Employee, "", new {@class = "text-danger"})
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Remove" class="btn btn-default"/>
                    </div>
                </div>
            </div>

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>

    }

    @if (ViewBag.feed != null)
    {
        <script>
            alert("@ViewBag.feed")
        </script>
    }
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
