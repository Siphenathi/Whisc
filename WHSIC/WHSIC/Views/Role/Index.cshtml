@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/_DashBoard.cshtml";
}

<div class="well">
    <div class="row">
        <h3>@Html.ActionLink("Create New", "Create", null, new {@class = "glyphicon glyphicon-edit"}) &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <label style="color: blue">||</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;      @Html.ActionLink("Assign User", "AssignRoles", null, new { @class = "glyphicon glyphicon-user" })&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <label style="color: blue">||</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;      @Html.ActionLink("Remove User", "DeleteRolesAsync", null, new { @class = "glyphicon glyphicon-user" })</h3>
    </div>
    <h2 style="color: rgba(61, 21, 114, 1)">ROLES LIST</h2>
    <table class="table table-condensed table-bordered table-hover table-striped">
        <tr>
            <th style="color: rgba(61, 21, 114, 1)">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>

            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new {id = item.Id})
                </td>
            </tr>
        }

    </table>
</div>


