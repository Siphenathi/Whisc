@model WHSIC.Model.FullTimeViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Admin/_DashBoard.cshtml";
}

<div class="well">Edit
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>FullTime Position Payment</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.BasicRate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.BasicRate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BasicRate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PositionID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.DropDownList("PositionID", (SelectList)ViewBag.PositionID, "---Select Description--", new { @style = "width:253px;height:38px;" })
                @Html.ValidationMessageFor(model => model.PositionID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
    <div>
        @ViewBag.feed
    </div>
<div>
    @Html.ActionLink("Back to List", "GetAllFullTime")
</div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

