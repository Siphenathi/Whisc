@using PagedList.Mvc
@model PagedList.IPagedList<WHSIC.Model.FullTimeViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/_DashBoard.cshtml";
}

<div class="well" style="padding-bottom: 70px">
<h2>FullTime Position Payment</h2>
<hr/>
<p>
    @Html.ActionLink("Create New", "AddFullTime")
</p>
    <table class="table table-bordered table-hover table-striped">
        <tr>
            <th>
                Basic Rate
            </th>
            <th>
                Description
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BasicRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Edit", "UpdateFullTime", new {id = item.ID}) |
                    @Html.ActionLink("Delete", "DeleteFullTime", new {id = item.ID})
                </td>
            </tr>
        }

    </table>
    <div class="col-sm-10">
        <div class="text-center">
            @Html.PagedListPager(Model, page => Url.Action("GetAllFullTime", new { page, pageSize = Model.PageSize }))
        </div>
    </div>
</div>