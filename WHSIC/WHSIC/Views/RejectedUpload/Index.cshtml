@using PagedList.Mvc
@model PagedList.IPagedList<WHSIC.Model.RejectedViewModel>
@{
    ViewBag.Title = "List of Rejected ";
    Layout = "~/Views/Secretary/_DashBoard.cshtml";
}
<div class="well">
    <h2>List of Rejected Contents</h2>
    <p>@Html.ActionLink("Upload Program Contents", "Create", "ProgramUpload")</p>
    <table class="table">

        <tr class="module itemz">

            @foreach (var item in Model)
            {
                <td class="outreach">
                    <div class="imagez">
                        <img src="data:image/png;base64,@Convert.ToBase64String(item.Image, 0, item.Image.Length)" width="250" height="250" />
                    </div>


                    <div class="item_infor">

                        <h3>@Html.DisplayFor(itemz => item.Name)</h3>
                        <h4>@Html.DisplayFor(x => item.Venue)</h4>
                        <h5>@Html.DisplayFor(x => item.StartDate) - @Html.DisplayFor(x => item.EndDate)</h5>
                        <div>    <p>@Html.DisplayFor(x => item.Content)</p></div>
                        <h3>Reason why declined?</h3>
                        <h4>@Html.DisplayFor(x => item.comment)</h4>
                    </div>
                    <div>
                        @Html.ActionLink("Restore", "Edit", new { id = item.ProgramId }, new { @class = "btn btn-default", @style = "background-color:purple; color:gold;opacity:0.6" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ProgramId }, new { @class = "btn btn-default", @style = "background-color:purple; color:gold;opacity:0.6" })
                </div>
            </td>
            }


        </tr>
        <tr>
            <td>
                <div class="col-sm-10">
                    <div class="center">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, pageSize = Model.PageSize }))
                    </div>
                </div>
            </td>
        </tr>
    </table>
    </div>

