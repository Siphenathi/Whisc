@model WHSIC.Data.Job
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Secretary/_DashBoard.cshtml";
}
<h4>Create New Post</h4>
<div class="well">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => model.Position, new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.Position, new { htmlAttributes = new { @style = "width:100%;height:38px;" } })
                    @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Requirements, new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.TextAreaFor(model => model.Requirements, new { @style = "width:100%;height:120px;" })
                    @Html.ValidationMessageFor(model => model.Requirements, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Duties, new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.TextAreaFor(model => model.Duties, new { @style = "width:100%;height:120px;" })
                    @Html.ValidationMessageFor(model => model.Duties, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ClosingDate, new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.ClosingDate, new { htmlAttributes = new { @style = "width:100%;height:38px;" } })
                    @Html.ValidationMessageFor(model => model.ClosingDate, "", new { @class = "text-danger" })

                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Salary, new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.Salary, new { htmlAttributes = new { @style = "width:100%;height:38px;" } })
                    @Html.ValidationMessageFor(model => model.Salary, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PositionStatus, new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.DropDownList("PositionStatus", new List<SelectListItem>
               {
                    new SelectListItem {Text="Permanent",Value="Permanent"},
                   new SelectListItem{Text="Part-Time",Value="Part-Time"}

               }, "Select Position Status", new { @style = "width:252px;height:38px;" })
                   @Html.ValidationMessageFor(model => model.PositionStatus, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ApplyingInfo, new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.TextAreaFor(model => model.ApplyingInfo, new { @style = "width:100%;height:120px;" })
                    @Html.ValidationMessageFor(model => model.ApplyingInfo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-primary btn-sm" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
    @if (ViewBag.Msgg != null)
    {
        <script type="text/javascript">
            alert("@ViewBag.Msgg")
        </script>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
