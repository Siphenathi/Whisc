@model WHSIC.Model.DonationViewModel

@{
    ViewBag.Title = "MakeDonation";
}
<link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css">
<div style="padding-top:10%">

    <h2 class="text-center">Make Donation</h2>
  
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <h4 class="text-center">Cash Donation</h4>
        <div class="form-horizontal" style="padding-left:27%">
           
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("Donation Type", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("DonationtypeID", (SelectList)ViewBag.Donationtype, "---Select Donation Type--", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DonationtypeID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10" style="padding-left:12%">
                    <input type="submit" value="Donate" class="btn btn-primary" />
                </div>
            </div>

            <div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10" >
                        @Html.ActionLink("Back", "ChooseDonation", null, new { @class = "fa fa-arrow-circle-o-left", @style = "Font-size:30px;" })
                    </div>
                </div>
            </div>
        </div>
    }
   
</div>
@if(ViewBag.feed!=null)
{
    <script type="text/javascript">
        alert("@ViewBag.feed")
    </script>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
