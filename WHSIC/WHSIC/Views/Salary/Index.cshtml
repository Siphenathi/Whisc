
@using PagedList.Mvc
@model PagedList.IPagedList<WHSIC.Model.SalaryViewModel>

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Treasure/_DashBoard.cshtml";
}

<h2>List of Employee Salaries</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered table-hover table-striped">
    <tr>
        
        <th>
            FirsName
        </th>
        <th>
            LastName
        </th>
        <th>
            Date
        </th>
        <th>
            Net
        </th>
        <th>
            Tax
        </th>
        <th>
            Salary
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.FirsName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Net)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tax)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salary)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SalaryID }) |
            @Html.ActionLink("Details", "Details", new { id = item.SalaryID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.SalaryID })
        </td>
    </tr>
}
    <tr>
        <td>
            <div class="col-sm-10">
                <div class="center">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, pageSize = Model.PageSize }))
                </div>
            </div>
        </td>
    </tr>

</table>
