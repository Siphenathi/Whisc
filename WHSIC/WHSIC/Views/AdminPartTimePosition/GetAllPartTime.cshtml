@using PagedList.Mvc
@model PagedList.IPagedList<WHSIC.Model.PartTimeViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/_DashBoard.cshtml";
}

<h2>List of PartTime Payment Positions</h2>

<p>
    @Html.ActionLink("Create New", "AddPartTime")
</p>
<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            Basic Rate
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BasicRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "UpdatePartTime", new { id = item.ID }) |
                @Html.ActionLink("Delete", "DeletePartTime", new { id = item.ID })
            </td>
        </tr>
    }
    <tr>
        <td>
            <div class="col-sm-10">
                <div class="center">
                    @Html.PagedListPager(Model, page => Url.Action("GetAllPartTime", new { page, pageSize = Model.PageSize }))
                </div>
            </div>
        </td>
    </tr>
</table>
