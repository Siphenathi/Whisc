@model WHSIC.Model.PartTimeViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Admin/_DashBoard.cshtml";
}
<h2>Add </h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Permanent Position Payment</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.BasicRate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.BasicRate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BasicRate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PositionID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.DropDownList("PositionID", (SelectList)ViewBag.pc, "---Select Description--", new { @style = "width:262px;height:38px;" })
                @Html.ValidationMessageFor(model => model.PositionID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>

    <div>
        @ViewBag.m
    </div>
}

<div>
    @Html.ActionLink("Back to List", "GetAllPartTime")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
